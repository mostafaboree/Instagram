<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_custome_user"
        android:layout_width="121dp"
        android:layout_height="106dp"
        android:src="@drawable/inastagram"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_custom_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/iv_custome_user"
        app:layout_constraintStart_toEndOf="@+id/iv_custome_user"
        app:layout_constraintTop_toTopOf="@+id/iv_custome_user"
        app:layout_constraintVertical_bias="0.271"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_custom_fullname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="32dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/iv_custome_user"
        app:layout_constraintStart_toEndOf="@+id/iv_custome_user"
        app:layout_constraintTop_toBottomOf="@+id/tv_custom_name"
        app:layout_constraintVertical_bias="0.608" />

    <Button
        android:id="@+id/bt_custom_foll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"

        android:background="@drawable/edittextcomm"
        android:text="Follow"
        android:textColor="@color/colorPrimary"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/iv_custome_user"
        app:layout_constraintStart_toEndOf="@+id/iv_custome_user"
        app:layout_constraintTop_toTopOf="@+id/iv_custome_user" />
</androidx.constraintlayout.widget.ConstraintLayout>